source 'https://rubygems.org'

gem 'therubyracer'
gem 'libv8'
gem 'rake', '>= 0.9'

gem 'sqlite3'

# This is PostgreSQL
gem 'pg'
# Full text search for PostgreSQL
gem 'pg_search', git: 'git://github.com/Casecommons/pg_search.git'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'rails'#, '3.2.3'

gem 'twitter-bootstrap-rails', git: 'git://github.com/seyhunak/twitter-bootstrap-rails.git'
gem 'bootstrap-datepicker-rails', git: 'git://github.com/Nerian/bootstrap-datepicker-rails.git'
gem 'bootstrap-timepicker-rails', git: 'git://github.com/pnicholls/bootstrap-timepicker-rails.git'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'haml-rails'
gem 'jquery-rails'

# Authentification stuff
gem 'devise'
gem 'omniauth'
gem 'omniauth-facebook'
gem 'omniauth-google-oauth2'

# For the map and markers
gem 'gmaps4rails'

# Retrieves the user's timezone
gem 'temporal-rails', git: 'git://github.com/jejacks0n/temporal.git'

# Enables tags
gem 'acts-as-taggable-on'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

