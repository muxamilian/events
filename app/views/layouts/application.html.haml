!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : 'letzmeet.at'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    / %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    / %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    / %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    / %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="/favicon.ico" rel="shortcut icon")
    %link(href="/assets/favicon.png" rel="icon")

  %body
    = render partial: 'events/hidden_modals'
    .navbar.navbar-fixed-top.navbar-inverse#main-navbar
      .navbar-inner
        .container
          %a.brand#main-brand(href="/")
            = render partial: 'events/title'
          %ul.nav
            = render 'devise/menu/login_items'
            = render 'devise/menu/registration_items'
    - if is_active? 'index'
      = yield
    - else
      .container-fluid{style: 'margin-top:40px;'}
        / For the messages
        .container#alert-container
          = render partial: 'flash', locals: {flash: flash}
        / Here the page content is included
        = yield

        %footer
          %p &copy; letzmeet.at 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    / Includes the script from gmaps4rails directly at the end of the page
    = yield :scripts
    = render partial: 'facebook_sdk'
    - if is_active? 'index'
      = render partial: 'index_script'

      
