- if user_signed_in?
  - if !current_user.events.include? event
    %a.btn{onclick: "attend_event(#{event.id});", class: size} Attend
  - else
    %a.btn{onclick: "unattend_event(#{event.id});", class: size} Unattend
    - if current_user.events_users.find_by_event_id(event.id).owner
      %a.btn{"data-toggle" => "modal", "data-remote" => '/events/'+event.id.to_s+'/edit', class: size, href: "#edit-event-modal"} Edit
      %a.btn.btn-danger{onclick: "delete_event(#{event.id});", class: size} Delete